{
    "manifest_version": 2,
    "name": "granslate",
    "version": "2.0",
    "description": "translate on the fly.",
    "homepage_url": "https://github.com/Husam-Omar/granslate",
    "author": "Icon made by Freepik from www.flaticon.com",
    "permissions": [
        "*://translate.googleapis.com/*",
        "*://*/*",
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "tabs"
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ]
    },
    "icons": {
        "32": "icons/icon-32.png",
        "64": "icons/icon-64.png"
    }
}